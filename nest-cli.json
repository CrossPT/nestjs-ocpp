{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      {
        "include": "src/schemas/**/*",
        "outDir": "dist/schemas"
      }
    ]
  },
  "projects": {
    "ocpp": {
      "type": "library",
      "root": "lib",
      "entryFile": "index",
      "sourceRoot": "lib/",
      "compilerOptions": {
        "tsConfigPath": "lib/tsconfig.lib.json"
      }
    }
  }
}